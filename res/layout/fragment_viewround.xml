<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sysLtGray"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/completed_text_view_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="12"
        android:gravity="center" 
        android:textSize="20sp"
        android:textColor="@color/sysWhite"
        android:background="@color/accent" />
    
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="@dimen/subtle_border"
    	android:visibility="visible"
    	android:background="@color/sysLtGray"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="110"
        android:background="@color/sysWhite"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/completed_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:scaleType="fitCenter"
			android:adjustViewBounds="true"
            android:gravity="center"
            android:layout_gravity="center" />
        
        <ProgressBar
            android:id="@+id/loading_image_circle2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>
    
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="@dimen/subtle_border"
    	android:visibility="visible"
    	android:background="@color/sysLtGray"/>
    
    <TextView
        android:id="@+id/completed_text_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="12"
        android:gravity="center" 
        android:textSize="20sp"
        android:textColor="@color/sysWhite"
        android:background="@color/accent" />

</LinearLayout>